<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/hpButton"
        android:layout_width="151dp"
        android:layout_height="76dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:onClick="onClickHP"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hp_icon" />

    <ImageButton
        android:id="@+id/canonButton"
        android:layout_width="115dp"
        android:layout_height="64dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:onClick="onClickCan"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hpButton"
        app:srcCompat="@drawable/canon_icon" />

    <ImageButton
        android:id="@+id/kyoceraButton"
        android:layout_width="118dp"
        android:layout_height="81dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        android:onClick="onClickKyo"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/canonButton"
        app:srcCompat="@drawable/kyocera_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>